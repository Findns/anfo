                    android:gravity="center"
                    android:textColor="#686A69"
                    android:text="loading..." />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.02"
                    android:orientation="horizontal" >
		
		        <ProgressBar
		            android:id="@+id/progressBarCPU2"
		            android:layout_width="200dp"
		            android:layout_height="20dp"
		            android:layout_gravity="center"
		            android:indeterminate="false" 
		            style="?android:attr/progressBarStyleHorizontal" 
		            android:progress="50" 
		            android:progressDrawable="@layout/shape_progress_bar" 
		            android:maxHeight="10dip" 
		            android:minHeight="10dip" />
		
		        <TextView
		            android:id="@+id/textViewUseCpu2Info"
		            android:layout_width="48dp"
		            android:layout_height="match_parent"
		            android:textColor="#686A69"
		            android:gravity="center"
		            android:text="%" />

    			</LinearLayout>


            </LinearLayout>

        </LinearLayout>
        
        
        <LinearLayout
            android:id="@+id/LayoutCPU3"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/textViewCPU3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#686A69"
                android:text=" CPU3 " />

            <LinearLayout
                android:id="@+id/LayoutCPU3Details"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"  
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textViewCPU3details"
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:layout_weight="0.38"
                    android:gravity="center"
                    android:textColor="#686A69"
                    android:text="loading..." />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.02"
                    android:orientation="horizontal" >
		
		        <ProgressBar
		            android:id="@+id/progressBarCPU3"
		            android:layout_width="200dp"
		            android:layout_height="20dp"
		            android:layout_gravity="center"
		            android:indeterminate="false" 
		            style="?android:attr/progressBarStyleHorizontal" 
		            android:progress="50" 
		            android:progressDrawable="@layout/shape_progress_bar" 
		            android:maxHeight="10dip" 
		            android:minHeight="10dip" />
		
		        <TextView
		            android:id="@+id/textViewUseCpu3Info"
		            android:layout_width="48dp"
		            android:layout_height="match_parent"
		            android:textColor="#686A69"
		            android:gravity="center"
		            android:text="%" />

    			</LinearLayout>


            </LinearLayout>

        </LinearLayout>
            
            
            
            
            
            
            
            
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
