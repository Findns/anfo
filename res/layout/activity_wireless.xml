
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:orientation="vertical"
        android:background="#E3E3E3">
        
        
        <ScrollView
        android:id="@+id/scrollCardLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:orientation="vertical"
            android:padding="15dip" >
        

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:paddingBottom="10dip">

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@layout/shape_card"
                    android:padding="10dip"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/wifiICon"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:paddingBottom="10dip"
                                android:paddingRight="10dip"
                                android:layout_gravity="center"
                                android:src="@drawable/wifiactive" />

                            <TextView
                                android:id="@+id/WifiSignal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="50%"
                                android:textColor="#686A69"
                                android:textSize="60sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/wifiTest1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="name: "
                                android:textColor="#686A69"
                                android:textSize="20dp" />
                            
                            <TextView
                                android:id="@+id/wifiTest2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="IP: "
                                android:textColor="#686A69"
                                android:textSize="20dp" />
                            
                            <TextView
                                android:id="@+id/wifiTest3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="MAC: "
                                android:textColor="#686A69"
                                android:textSize="20dp" />
                            
                            <TextView
                                android:id="@+id/wifiTest4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Speed: "
                                android:textColor="#686A69"
                                android:textSize="20dp" />
                            
                            
                          <TextView
                                android:id="@+id/wifiTest5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="BSSID: "
                                android:textColor="#686A69"
                                android:textSize="20dp" />
                            
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
            
        
         <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:paddingBottom="10dip">

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:background="@layout/shape_card"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/bluetoothICon"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:paddingBottom="10dip"
                                android:paddingRight="10dip"
                                android:layout_gravity="center"
                                android:src="@drawable/bluetoothon" />

                            <TextView
                                android:id="@+id/bluetoothSignal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="50%"
                                android:textColor="#686A69"
                                android:textSize="60sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/bluetoothTest1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="name: "
                                android:textColor="#686A69"
                                android:textSize="20dp" />
                            
                            <TextView
                                android:id="@+id/bluetoothTest2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="IP: "
                                android:textColor="#686A69"
                                android:textSize="20dp" />
                            
                            <TextView
                                android:id="@+id/bluetoothTest3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="MAC: "
                                android:textColor="#686A69"
                                android:textSize="20dp" />
                            
                            
                            
                            
                          
                            
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
            
         
         
         <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:paddingBottom="10dip">

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:background="@layout/shape_card"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/screenICon"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:paddingBottom="10dip"
                                android:paddingRight="10dip"
                                android:layout_gravity="center"
                                android:src="@drawable/brightness_icon" />

                            <TextView
                                android:id="@+id/screenSignal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="50%"
                                android:textColor="#686A69"
                                android:textSize="60sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/screenTest1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="name: "
                                android:textColor="#686A69"
                                android:textSize="20dp" />
                            
                            <TextView
                                android:id="@+id/screenTest2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="IP: "
                                android:textColor="#686A69"
                                android:textSize="20dp" />
                          
                            
                            
                            
                            
                          
                            
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
            
         
         <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:paddingTop="10dip">

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:background="@layout/shape_card"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/GPSICon"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:paddingBottom="10dip"
                                android:paddingRight="10dip"
                                android:layout_gravity="center"
                                android:src="@drawable/gpson" />

                            <TextView
                                android:id="@+id/GPSSignal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="50%"
                                android:textColor="#686A69"
                                android:textSize="60sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
        
         </LinearLayout>
         </ScrollView>

    </LinearLayout>