<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#E3E3E3"
              android:orientation="vertical"
              android:gravity="center">
    
    <ScrollView
        android:id="@+id/scrollCardLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:orientation="vertical" >
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="340dp"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@layout/shape_card"
            android:gravity="center"
            android:orientation="vertical" >

           <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/batteryViewImg"
                                android:layout_width="110dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/big_logo" />

                            <TextView
                                android:id="@+id/BatteryAct1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Anfo premium"
                                android:textColor="#686A69"
                                android:textStyle="bold"
                                android:textSize="32dp" />
                        </LinearLayout>
                    </LinearLayout>
            
            
            
        </LinearLayout>
    </RelativeLayout>

     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@layout/shape_card"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|right" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#686A69"
            android:text="Theme" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:gravity="center" >

            <ImageView
                android:id="@+id/imageViewWifiAllowYesOrNo"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:src="@drawable/yes" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|right" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#686A69"
            android:text="Power Saving" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:gravity="center" >

            <ImageView
                android:id="@+id/imageViewDataAllowYesOrNo"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:src="@drawable/yes" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|right" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#686A69"
            android:text="Power Saving Widget" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:gravity="center" >

            <ImageView
                android:id="@+id/imageViewBluetoothAllowYesOrNo"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:src="@drawable/yes" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|right" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#686A69"
            android:text="Overclcock" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:gravity="center" >

            <ImageView
                android:id="@+id/imageViewBluetoothAllowYesOrNo"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:textColor="#686A69"
                android:src="@drawable/yes" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|right" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:textColor="#686A69"
            android:gravity="center"
            android:text="Toggle improvement" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:gravity="center" >

            <ImageView
                android:id="@+id/imageViewBluetoothAllowYesOrNo"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:src="@drawable/yes" />
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >
    
        
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#686A69"
            android:text="If you enjoy my work or if you want to say 'Thanks', do not hesitate to buy Anfo Premium. Since i am a student, help is highly appreciated, but it's not expected!" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom" >
    <Button
        android:id="@+id/buttonGoMarket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See more about Anfo premium" />
    </LinearLayout>

</LinearLayout>
            
            
            
        </LinearLayout>
    </RelativeLayout>
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

     </LinearLayout>
     </ScrollView>
    
</LinearLayout>
































