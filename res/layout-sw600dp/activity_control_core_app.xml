		        <TextView
		            android:id="@+id/textViewUseCpu3Info"
		            android:layout_width="48dp"
		            android:layout_height="match_parent"
		            android:textColor="#686A69"
		            android:gravity="center"
		            android:textSize="20dp"
		            android:text="%" />

    			</LinearLayout>


            </LinearLayout>

        </LinearLayout>
            
            
            
            
            
            
            
            
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
