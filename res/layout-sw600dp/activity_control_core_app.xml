<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#CCCCCC"
    android:gravity="center"
    android:orientation="vertical" >

    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    

     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="410dp" >

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="550dp"
            android:layout_height="400dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@layout/shape_card"
            android:gravity="center"
            android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/LayoutCPU0"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="0.98" >

            <TextView
                android:id="@+id/textViewCPU0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/black"
                android:gravity="center"
                android:text=" CPU0 "
                android:textSize="40dp"
                android:textColor="#686A69"
                android:textStyle="bold" />
            
            <LinearLayout
                android:id="@+id/LayoutCPU0Details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textViewCPU0details"
                    android:layout_width="337dp"
                    android:layout_height="67dp"
                    android:gravity="center"
                    android:text="loading..."
                    android:textSize="27dp"
                    android:textColor="#686A69" />

                <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
		
				<ProgressBar
				    android:id="@+id/progressBarCPU0"
				    style="?android:attr/progressBarStyleHorizontal"
				    android:layout_width="337dp"
				    android:layout_height="20dp"
				    android:layout_gravity="center"
				    android:indeterminate="false"
				    android:maxHeight="10dip"
				    android:minHeight="10dip"
				    android:progress="50"
				    android:progressDrawable="@layout/shape_progress_bar" />
		
		        <TextView
		            android:id="@+id/textViewUseCpu0Info"
		            android:layout_width="60dp"
		            android:layout_height="match_parent"
		            android:gravity="center"
		            android:textColor="#686A69"
		            android:textSize="20dp"
		            android:text="%" />

    			</LinearLayout>


            </LinearLayout>

        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/LayoutCPU1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/textViewCPU1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="40dp"
                android:textColor="#686A69"
                android:textStyle="bold"
                android:text=" CPU1 " />

